{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "infos": {
        "type": "object",
        "properties": {
          "type": {
            "enum": [
              "simenv",
              "agent"
            ]
          },
          "name": {
            "type": "string"
          },
          "host": {
            "type": "string",
            "format": "ipv4"
          },
          "port": {
            "type": "integer",
            "minimum": 0,
            "maximum": 65535
          },
          "desc": {
            "type": "string"
          }
        },
        "required": [
          "type",
          "name",
          "host",
          "port",
          "desc"
        ]
      },
      "configs": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "args": {
                "type": "object"
              }
            },
            "required": [
              "type",
              "args"
            ]
          },
          {
            "type": "object",
            "properties": {
              "training": {
                "type": "boolean"
              },
              "type": {
                "type": "string"
              },
              "hypers": {
                "type": "object"
              },
              "sifunc": {
                "type": "string"
              },
              "oafunc": {
                "type": "string"
              },
              "rewfunc": {
                "type": "string"
              }
            },
            "required": [
              "training",
              "type",
              "hypers",
              "sifunc",
              "oafunc",
              "rewfunc"
            ]
          }
        ]
      }
    },
    "required": [
      "infos",
      "configs"
    ]
  }
}
